<div class="page-title">
    <div class="title_left">
    <h3>购物车</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
            <input type="text" class="form-control" placeholder="用户名、图书名称、价格" value="<%= table.globalName %>">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="shopcartSearch(this)"> 搜索 </button>
            </span>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>用户名</th>
        <th>图书名称</th>
        <th>图片</th>
        <th>数量</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
        <% table.Data.forEach(function(item,index){ %>
            <tr>
                <th scope="row"><%= (table.pageNo*table.pageSize)+(index+1) %> %></th>
                <td><%= item.Username %></td>
                <td><%= item.BookName %></td>
                <td><%= item.BookPhoto %></td>
                <td><%= item.Quantity %></td>
                <td>
                    <button type="button" class="btn btn-danger" onclick='deleteShopcart(<%= item.Id %>)'>删除</button>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<% if (table.count>1) { %>
    <nav class="text-center">
        <ul class="pagination">
            <% if (table.pageNo==0) { %>
                <li class="disabled">
            <% }else{ %>
                <li>
            <% } %>
                <a href="<%= table.pageNo==0?'javascript:void(0)':'/'+table.url+'?pageNo='+(parseInt(table.pageNo)-1)%>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% for(var i=0;i<table.count;i++){ %>
                <% if (i==table.pageNo) { %>
                    <li class="active">
                <% }else{ %>
                    <li>
                <% } %>
                <a href="<%= '/'+table.url+'?pageNo='+ i %>"><%= i+1 %></a></li>
            <% } %>
            <% if (table.pageNo==(table.count-1)) { %>
                <li class="disabled">
            <% }else{ %>
                <li>
            <% } %>
                <a href="<%= table.pageNo==(table.count-1)?'javascript:void(0)':'/'+table.url+'?pageNo='+(parseInt(table.pageNo)+1)%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
<% } %>
