<% include ../common/header %>
<% include ../common/nav %>
<div class="container" style="margin-top:85px;margin-bottom:15px;">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <ol class="breadcrumb shadow-frame">
                你现在正在浏览：
                <li><a href="/">首页</a></li>
                <% if (goodDetail.BookId) { %>
                    <li><a href="/goodsDetail?id=<%= goodDetail.BookId %>"><%= goodDetail.BookName %></a></li>
                <% }else{ %>
                    <li class="active"><%= goodDetail.BookName %></li>
                <% } %>
                <li class="active">确认订单</li>
            </ol>
        </div>
        <div class="col-md-4 col-sm-6">
            <a href="#" class="thumbnail">
                <img src="<%= goodDetail.BookPhoto %>" alt="<%= goodDetail.BookName %>">
            </a>
        </div>
        <div class="col-md-8 col-sm-6 text-center">
            <p class="text-info">图书名称：&nbsp;<%= goodDetail.BookName %></p>
            <p class="text-info">作者：&nbsp;<%= goodDetail.Author %></p>
            <p class="text-info">价格：&nbsp;<%= goodDetail.Price %></p>
            <p class="text-info">数量：&nbsp;<%= goodDetail.Quantity %></p>
            <p class="text-info">isbn：&nbsp;<%= goodDetail.Isbn %></p>
            <p class="text-info">描述：&nbsp;<%= goodDetail.Describe %></p>
            <p class="text-info">出版时间：&nbsp;<%= goodDetail.PublishTime %></p>
            <p class="text-info">出版社：&nbsp;<%= goodDetail.PublishCompany %></p>
        </div>
        <div class="col-md-12 col-sm-12">
            <button type="button" class="btn btn-success addressOrder"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;添加地址</button>
        </div>
    </div>
</div>
<% include ../common/footer %>